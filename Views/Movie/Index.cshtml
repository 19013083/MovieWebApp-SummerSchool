@model My_movie_manager.Models.movieDetails
@{
    ViewData["Title"] = "Movies home";
}

<div class="text-center">
    <h1 class="display-4">Movies</h1>

    <h3>Welcome to movies home</h3>

    <div class="row">
        <div class="col-md-4">

            <form class="form" asp-controller="movie" asp-action="search">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Search for movie</label>
                    <input type="text" class="form-control" id="movieName" name="movieTitle" placeholder="Enter movie name" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

</div>
