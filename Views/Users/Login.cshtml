<h4 style="color:red">@ViewBag.userNotFound</h4>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        <form class="form-signin" asp-action="Login">
                            <div class="form-label-group">
                                <label for="inputEmail">Email address</label>
                                <input type="email" name="inUserEmail" class="form-control" placeholder="Email address" required autofocus>
                            </div>
                            <br />
                            <div class="form-label-group">
                                <label for="inputPassword">Password</label> 
                                <input name="inPassword" id="password" type="password" class="form-control" placeholder="Password" required autofocus>
                                <input type="checkbox" onclick="hidePassword()"> Show Password
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                            <div>
                                <a asp-action="create">Create new account</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<script>
    function hidePassword() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
