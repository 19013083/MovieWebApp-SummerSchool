@{
    ViewData["Title"] = "Login";
}

<h1>Welcome</h1>
<h4>Login</h4>
<h4 style="color:red">@ViewBag.userNotFound</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label class="control-label">Username</label>
                <input name="inUserEmail" class="form-control" value="sandile@email.com"> @* Testing value*@
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input name="inPassword" id="password" type="password" value="123" class="form-control" />
                <input type="checkbox" onclick="hidePassword()"> Show Password
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="create">Create new account</a>
</div>


<script>
    function hidePassword() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
@*source:https://www.w3schools.com/howto/howto_js_toggle_password.asp*@
